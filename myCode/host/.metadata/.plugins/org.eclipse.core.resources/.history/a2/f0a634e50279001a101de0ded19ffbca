#include <stdio.h>

int main(void) {
	float num1, num2, num3;
	printf("Enter num1: ");
	fflush(stdout);
	scanf("%f",&num1);
	printf("\nEnter num2: ");
	scanf("%f",&num2);
	printf("\nEnter num3: ");
	scanf("%f",&num3);
	printf("\nAverage is: %f",(num1+num2+num3)/3);
	printf("\nPress key to exit");
	getchar();
	return 0;
}
