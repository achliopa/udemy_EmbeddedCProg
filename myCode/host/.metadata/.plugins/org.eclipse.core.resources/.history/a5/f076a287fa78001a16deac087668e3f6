#include <stdio.h>

int main(void) {
	int num1, num2, num3;
	printf("Enter num1: ");
	scanf("%d",&num1);
	printf("Enter num2: ");
	scanf("%d",&num2);
	printf("Enter num3: ");
	scanf("%d",&num3);
	printf("Average is: %f",(float)(num1+num2+num3)/3);
	printf("Press key to exit\n");
	getchar();
	return 0;
}
